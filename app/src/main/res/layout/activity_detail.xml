<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    tools:context="com.reihanalavi.footballmatch.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Date Of Match"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtHomeTeam"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="FC Barcelona"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtHomeManager"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtHomeTeam"
                    tools:text="Pep Guardiola"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayManager"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtAwayTeam"
                    tools:text="Jurgen Klopp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayTeam"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    tools:text="Bayern Munich"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:id="@+id/imgHomeBadge"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/imgAwayBadge" />

                <ImageView
                    android:id="@+id/imgAwayBadge"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtAwayManager"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:text="0 : 0"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtHomeForm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imgHomeBadge"
                    tools:text="4-3-3"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtAwayForm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/imgAwayBadge"
                    tools:text="4-3-2-1"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtHomeGoals"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="FC Barcelona"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtHomeShots"
                    android:layout_width="100dp"
                    android:layout_below="@id/txtHomeGoals"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    tools:text="FC Barcelona"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayGoals"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    tools:text="Bayern Munich"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayShots"
                    android:layout_width="100dp"
                    android:layout_below="@id/txtAwayGoals"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:text="Bayern Munich"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/goals"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtShots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtGoals"
                    android:layout_alignParentStart="true"
                    android:text="@string/shots"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtHomeRed"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="0"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtHomeYellow"
                    android:layout_width="100dp"
                    android:layout_below="@id/txtHomeRed"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    tools:text="1"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayRed"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    tools:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayYellow"
                    android:layout_width="100dp"
                    android:layout_below="@id/txtAwayRed"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:text="2"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/red_card_s"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtYellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtRed"
                    android:layout_alignParentStart="true"
                    android:text="@string/yellow_card_s"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtHomeGk"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="0"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtHomeDef"
                    android:layout_width="100dp"
                    tools:below="@id/txtHomeGk"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtHomeGk"
                    tools:text="1"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtHomeMid"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtHomeDef"
                    tools:text="1"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtHomeFor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHomeMid"
                    android:layout_alignParentStart="true"
                    tools:text="1"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayGk"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    tools:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayDef"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAwayGk"
                    android:layout_alignParentEnd="true"
                    tools:text="2"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayMid"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAwayDef"
                    android:layout_alignParentEnd="true"
                    tools:text="2"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwayFor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAwayMid"
                    android:layout_alignParentEnd="true"
                    tools:text="2"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtGk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="@string/goalkeeper"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtDef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtGk"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="@string/defense"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtDef"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="@string/midfield"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtFor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtMid"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="@string/forward"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtHomeSub"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    tools:text="0"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtAwaySub"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    tools:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="@string/substitues"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/pb_details"/>

</FrameLayout>
